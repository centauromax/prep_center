{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["npm install"]
        },
        "build": {
          "cmds": ["npm run build"]
        }
      },
      "start": {
        "cmds": ["npx serve -s build -l $PORT"]
      }
    }
  },
  "deploy": {
    "startCommand": "python manage.py migrate && python manage.py populate_clienti && python manage.py populate_ean && gunicorn prep_center.wsgi",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}