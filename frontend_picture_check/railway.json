{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["npm install"]
        },
        "build": {
          "cmds": ["npm run build"]
        }
      },
      "start": {
        "cmds": ["npm run start"]
      }
    }
  },
  "deploy": {
    "startCommand": "npm install -g http-server && http-server dist -p $PORT --cors",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}