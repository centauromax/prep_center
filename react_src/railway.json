{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "env": {
      "NIXPACKS_NODE_VERSION": "18"
    },
    "buildCommand": "mkdir -p dist && cd picture_check && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "npm install -g http-server && http-server dist -p $PORT --cors",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}